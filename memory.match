<!DOCTYPE html>
<html>
<head>
  <title>Memory Match</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>

<header>
  <h1>Memory Match</h1>
  <a href="games.html">â¬… Back to Games</a>
</header>

<div class="game-card">
  <p>Match the cards by clicking them!</p>
  <p id="message"></p>
  <div id="cards"></div>
</div>

<script>
  const cardsArray = ['ðŸŽ','ðŸŒ','ðŸŽ','ðŸŒ'];
  let selected = [];
  let matched = [];

  const cardsDiv = document.getElementById('cards');
  cardsArray.sort(() => 0.5 - Math.random());

  cardsArray.forEach((item, index) => {
    const button = document.createElement('button');
    button.textContent = '?';
    button.style.margin = '5px';
    button.onclick = () => {
      if (!selected.includes(index)) {
        button.textContent = item;
        selected.push(index);
        if (selected.length === 2) {
          setTimeout(checkMatch, 500);
        }
      }
    };
    cardsDiv.appendChild(button);
  });

  function checkMatch() {
    const [first, second] = selected;
    const buttons = cardsDiv.querySelectorAll('button');
    if (cardsArray[first] === cardsArray[second]) {
      matched.push(first, second);
      document.getElementById('message').innerText = 'Matched!';
    } else {
      buttons[first].textContent = '?';
      buttons[second].textContent = '?';
      document.getElementById('message').innerText = 'Try again!';
    }
    selected = [];
    if (matched.length === cardsArray.length) {
      document.getElementById('message').innerText = 'You win!';
    }
  }
</script>

</body>
</html>
